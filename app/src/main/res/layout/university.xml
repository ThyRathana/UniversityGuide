<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:id="@+id/place_holder">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="93dp">
        <ImageView
            android:id="@+id/img_logo"
            android:layout_margin="10dp"
            android:src="@drawable/niptict"
            android:layout_width="90dp"
            android:layout_height="90dp" />
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_university"
                android:layout_margin="10dp"
                android:textSize="@dimen/txt_size"
                android:text="National Institute of Posts, Telecoms And ICT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="400dp">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/about_school"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:background="#00BFFF"
                android:layout_width="111dp"
                android:layout_height="111dp">
                <ImageView
                    android:src="@drawable/ic_building"
                    android:layout_width="50dp"
                    android:layout_height="50dp" />
                <TextView
                    android:text="About School"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/major_fee"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:background="#FF6347"
                android:layout_width="111dp"
                android:layout_height="111dp">
                <ImageView
                    android:src="@drawable/book"
                    android:layout_width="50dp"
                    android:layout_height="50dp" />
                <TextView
                    android:text="Major and Fee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/location"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:background="#FFFF66"
                android:layout_width="111dp"
                android:layout_height="111dp">
                <ImageView
                    android:src="@drawable/location"
                    android:layout_width="50dp"
                    android:layout_height="50dp" />
                <TextView
                    android:text="Location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/recommmend"
                android:layout_margin="3dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:background="#00FA9A"
                android:layout_width="111dp"
                android:layout_height="111dp">
                <ImageView
                    android:src="@drawable/ic_recommend"
                    android:layout_width="50dp"
                    android:layout_height="50dp" />
                <TextView
                    android:text="Recommend"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:padding="20dp"
        android:background="#F7F0F7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_margin="5dp"

            android:textSize="@dimen/txt_size"
            android:text="contact Us"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginTop="10dp"
            android:layout_marginBottom="3dp"
            android:textSize="@dimen/txt_size"
            android:text="Tel  093414133"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_margin="3dp"
            android:textSize="@dimen/txt_size"
            android:text="Email  thyrathana5@gmail.com"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_margin="3dp"
            android:textSize="@dimen/txt_size"
            android:text="Website  niptict.edu.kh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>


</LinearLayout>